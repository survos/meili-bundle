{# meili-bundle/templates/ez/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}
{% trans_default_domain 'meili' %}
{% block title %}Search Dashboard{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .index-card .card-body {
            min-height: 200px;
        }

        .feature-icon {
            font-size: 2.5rem;
        }

        .field-badge {
            font-size: 0.75rem;
            font-weight: 300;
            margin: 0 !important;
            padding: 0.125rem 0.375rem;
        }

        .index-card .card-header h4 {
            font-size: 1.25rem;
            font-weight: 800;
        }
    </style>
{% endblock %}

{% block page_content %}

{#    {{ ea.templatePath('layout') }}#}
{#    {{ dump(ea) }}#}
    <div class="container-fluid p-0">
        <h1 class="mb-3">{{ 'indexes'|trans }}</h1>

        <div class="row g-4">
            {% for indexName, settings in allSettings %}
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card h-100 index-card">
                        <div class="card-header">
                            <h4 class="mb-0">
                                {% set ui = settings.ui %}
                                {% set icon = ui.icon|default(false) %}
                                {% if icon %}
                                    {{ ux_icon(icon) }}
                                    {% else %}
                                        {{ ux_icon('mdi:database-search') }}
                                {% endif %}
                                {{ settings.baseName }}
                                <span class="btn btn-primary float-end">
                                Count: {{ approximate_count(settings.class) }}

                                </span>
                            </h4>
                        </div>

                        <div class="card-body">
                            {# Index Management #}
                            <div class="mb-4">
                                <a href="{{ path(prefix ~ '_' ~ 'meili_index_dashboard', {indexName: indexName}) }}"
                                   class="btn btn-secondary w-100 justify-content-center">
                                    {{ ux_icon('oui:nav-overview') }}
                                    Index Details
                                </a>
                            </div>

                            {# Full Text Search #}
                            <div class="mb-4">
                                <h6 class="text-muted mb-2">
{#                                    {{ ux_icon('mdi:magnify-expand') }}#}
                                    {{ 'filter.title'|trans(domain: 'EasyAdminBundle') }}
                                    {{ 'action.search'|trans(domain: 'EasyAdminBundle') }}
                                </h6>
                                <a href="{{ path('meili_insta', {indexName: indexName}) }}"
                                   target="_blank"
                                   class="btn btn-secondary w-100 mb-2 justify-content-center">
{#                                    {{ ux_icon('mdi:search') }}#}
                                    {{ 'action.search'|trans(domain: 'EasyAdminBundle') }}
                                    {{ indexName }}

                                </a>

                                {% if settings.schema.searchableAttributes|length > 0 %}
                                    <div class="d-flex flex-wrap gap-1">
                                        {% for searchField in settings.schema.searchableAttributes %}
                                            <span class="badge bg-success-subtle field-badge">
                                                {{ searchField }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            {# Filterable Fields (Optional) #}
                            {% if settings.schema.filterableAttributes is defined and settings.schema.filterableAttributes|length > 0 %}
                                <div class="mb-4">
                                    <h6 class="text-muted mb-2">
                                        {{ ux_icon('mdi:filter') }}
                                        {{ 'filter.title'|trans(domain: 'EasyAdminBundle') }}
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% set domain = settings.baseName %}
                                        {# @todo: handle different translation styles #}
                                        {% for filterField in settings.schema.filterableAttributes %}
                                            <span class="badge bg-primary-subtle text-dark field-badge" title="{{ '%s.description'|format(filterField)|trans(domain: domain) }}">
                                                {{ '%s.label'|format(filterField)|trans(domain: domain) }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Semantic Search / Embedders #}
                            {% if settings.embedders is defined and settings.embedders|length > 0 %}
                                <div>
                                    <h6 class="text-muted mb-2">
                                        {{ ux_icon('fluent:brain-circuit-20-filled') }}
                                        {{ 'action.search'|trans(domain: 'EasyAdminBundle') }}
                                    </h6>
                                    <div class="d-flex gap-2">
                                        {% for embedder in settings.embedders %}
                                            <a href="{{ path('meili_insta_embed', {indexName: indexName, embedder: embedder}) }}"
                                               target="_blank"
                                               class="btn btn-secondary btn-sm px-2">
                                                {{ ux_icon('mdi:semantic-web') }}
                                                {{ embedder }}
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <div class="card-footer text-muted small">
                            {{ 'index'|trans }}: <code>{{ indexName }}</code>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
