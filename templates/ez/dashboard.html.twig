{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Search Dashboard{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .index-card .card-body {
            min-height: 200px;
        }

        .feature-icon {
            font-size: 2.5rem;
        }

        .field-badge {
            font-size: 0.75rem;
            font-weight: 300;
            margin: 0 !important;
            padding: 0.125rem 0.375rem;
        }

        .index-card .card-header h4 {
            font-size: 1.25rem;
            font-weight: 800;
        }
    </style>
{% endblock %}

{% block page_content %}
    <div class="container-fluid p-0">
        <h1 class="mb-3">Search Indexes</h1>

        <div class="row g-4">
            {% for indexName, settings in settings %}
                <div class="col-12 col-md-6 col-xl-4">
                    <div class="card h-100 index-card">
                        <div class="card-header">
                            <h4 class="mb-0">
                                {{ ux_icon('mdi:database-search') }}
                                {{ settings.rawName }}
                            </h4>
                        </div>

                        <div class="card-body">
                            {# Index Management #}
                            <div class="mb-4">
                                <a href="{{ path('meili_admin_meili_show_index', {indexName: indexName}) }}"
                                   class="btn btn-secondary w-100 justify-content-center">
                                    {{ ux_icon('oui:nav-overview') }}
                                    Index Details
                                </a>
                            </div>

                            {# Full Text Search #}
                            <div class="mb-4">
                                <h6 class="text-muted mb-2">
                                    {{ ux_icon('mdi:magnify-expand') }}
                                    Text/Facet Search
                                </h6>
                                <a href="{{ path('meili_insta', {indexName: indexName}) }}"
                                   target="_blank"
                                   class="btn btn-secondary w-100 mb-2 justify-content-center">
                                    {{ ux_icon('mdi:search') }}
                                    Open Search {{ indexName }}
                                </a>

                                {% if settings.schema.searchableAttributes|length > 0 %}
                                    <div class="d-flex flex-wrap gap-1">
                                        {% for searchField in settings.schema.searchableAttributes %}
                                            <span class="badge bg-success-subtle field-badge">
                                                {{ searchField }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>

                            {# Filterable Fields (Optional) #}
                            {% if settings.schema.filterableAttributes is defined and settings.schema.filterableAttributes|length > 0 %}
                                <div class="mb-4">
                                    <h6 class="text-muted mb-2">
                                        {{ ux_icon('mdi:filter') }}
                                        Filterable Fields
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% for filterField in settings.schema.filterableAttributes %}
                                            <span class="badge bg-primary-subtle text-dark field-badge">
                                                {{ filterField }}
                                            </span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Semantic Search / Embedders #}
                            {% if settings.embedders is defined and settings.embedders|length > 0 %}
                                <div>
                                    <h6 class="text-muted mb-2">
                                        {{ ux_icon('fluent:brain-circuit-20-filled') }}
                                        Semantic Search
                                    </h6>
                                    <div class="d-flex gap-2">
                                        {% for embedder in settings.embedders %}
                                            <a href="{{ path('meili_insta_embed', {indexName: indexName, embedder: embedder}) }}"
                                               target="_blank"
                                               class="btn btn-secondary btn-sm px-2">
                                                {{ ux_icon('mdi:semantic-web') }}
                                                {{ embedder }}
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <div class="card-footer text-muted small">
                            Index: <code>{{ indexName }}</code>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
