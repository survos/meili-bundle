{% extends '@EasyAdmin/layout.html.twig' %}

{% block title %}{{ indexName }} — Meili Index{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css">
    <style>
        #facetFieldTabs .nav-link.facet-empty {
            opacity: 0.5;
            font-style: italic;
            background: #fff5f5;
            border-color: #f5c6cb transparent transparent transparent;
        }
        #facetFieldTabs .nav-link.facet-empty::before {
            content: "⚠";
            font-size: 0.7em;
            margin-right: 3px;
            font-style: normal;
        }
        #facetFieldTabs .nav-link.facet-empty .badge-count {
            color: #dc3545;
        }
        #facetFieldTabs .nav-link.facet-empty:hover {
            opacity: 0.7;
        }

        #facetFieldTabs {
            border-bottom: 2px solid #dee2e6;
            gap: 1px;
            flex-wrap: wrap;
        }
        #facetFieldTabs .nav-item {
            margin-bottom: -2px;
        }
        #facetFieldTabs .nav-link {
            border: 1px solid transparent;
            border-bottom: none;
            border-radius: 3px 3px 0 0;
            background: #f1f3f5;
            color: #495057;
            padding: 0.3rem 0.6rem;
            font-size: 0.8rem;
            line-height: 1.2;
        }
        #facetFieldTabs .nav-link:hover {
            background: #e9ecef;
            border-color: #dee2e6 #dee2e6 transparent;
        }
        #facetFieldTabs .nav-link.active {
            background: #fff;
            border-color: #0d6efd #dee2e6 #fff #dee2e6;
            border-left: 2px solid #0d6efd;
            color: #0d6efd;
            font-weight: 600;
        }
        #facetFieldTabs .badge-count {
            font-size: 0.55em;
            vertical-align: super;
            color: #868e96;
            font-weight: 500;
            margin-left: 1px;
        }
        #facetFieldTabs .nav-link.active .badge-count {
            color: #0d6efd;
        }

        .dataTable-wrapper .dataTable-top,
        .dataTable-wrapper .dataTable-bottom {
            padding: 0.5rem 0;
        }
        .dataTable-wrapper .dataTable-search input {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
        }
    </style>
{% endblock %}

{% block content_header %}
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            <h1 class="title mb-0">
                {{ indexName }} <small class="text-muted">index overview</small>
            </h1>
            <small class="text-muted">
                {{ adminContext.dashboardTitle ?? 'Meili Admin' }}
            </small>
        </div>

        <div class="btn-toolbar gap-2">
            {% set riccox = 'http://localhost:24900/ins/1/index/' ~ indexName %}
            <a class="btn btn-outline-secondary" href="{{ riccox }}">
                <i class="fa fa-tasks me-1"></i> Tasks
            </a>

            {% if settings.embedders is defined and settings.embedders|length %}
                <div class="btn-group" role="group">
                    {% for e in settings.embedders %}
                        <a class="btn btn-success"
                           href="{{ path('meili_insta_embed', {indexName: indexName, embedder: e}) }}">
                            <i class="fa fa-magic me-1"></i> {{ e }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row mb-3">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body py-3">
                    <div class="text-muted small mb-1">Documents</div>
                    <div class="h4 mb-0">{{ stats.numberOfDocuments ?? '—' }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body py-3">
                    <div class="text-muted small mb-1">Is Indexing</div>
                    <div class="h4 mb-0">{{ stats.isIndexing ? 'Yes' : 'No' }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body py-3">
                    <div class="text-muted small mb-1">Facet Fields</div>
                    <div class="h4 mb-0">{{ facetCounts|length }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body py-3">
                    <div class="text-muted small mb-1">Fields</div>
                    <div class="h4 mb-0">{{ stats.fieldDistribution|length }}</div>
                </div>
            </div>
        </div>
    </div>

    <ul class="nav nav-tabs mb-3" id="meiliIndexTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="facets-tab" data-bs-toggle="tab" data-bs-target="#facets" type="button" role="tab">
                Facets
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">
                Settings (configured)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="raw-info-tab" data-bs-toggle="tab" data-bs-target="#raw-info" type="button" role="tab">
                Raw index info
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="stats-tab" data-bs-toggle="tab" data-bs-target="#stats" type="button" role="tab">
                Stats (API)
            </button>
        </li>
    </ul>

    <div class="tab-content" id="meiliIndexTabsContent">
        {# ---------------- FACETS TAB ---------------- #}
        <div class="tab-pane fade show active" id="facets" role="tabpanel">
            {% if facetCounts is empty %}
                <div class="alert alert-info">
                    No facet counts available. Make sure <code>settings.facets</code> is configured and the index is populated.
                </div>
            {% else %}
                <div class="card">
                    <div class="card-header border-bottom-0 bg-white">
                        <nav>
                            <ul class="nav nav-tabs card-header-tabs" id="facetFieldTabs" role="tablist">
                                {% for fieldName, counts in facetCounts %}
                                    {% set fieldId = 'facet-' ~ fieldName|replace({' ': '-', '.': '-', '[': '-', ']': '-'}) %}
                                    <li class="nav-item" role="presentation">

                                        <button class="nav-link {{ loop.first ? 'active' }}{{ counts|length == 0 ? ' facet-empty' }}"
                                                id="{{ fieldId }}-tab"
                                                data-bs-toggle="tab"
                                                data-bs-target="#{{ fieldId }}"
                                                type="button"
                                                role="tab">
                                            {{ fieldName }}
                                            <span class="badge-count">{{ counts|length }}</span>
                                        </button>

                                    </li>
                                {% endfor %}
                            </ul>
                        </nav>
                    </div>

                    <div class="card-body">
                        <div class="tab-content" id="facetFieldTabsContent">
                            {% for fieldName, counts in facetCounts %}
                                {% set fieldId = 'facet-' ~ fieldName|replace({' ': '-', '.': '-', '[': '-', ']': '-'}) %}
                                <div class="tab-pane fade {{ loop.first ? 'show active' }}" id="{{ fieldId }}" role="tabpanel">
                                    <div class="row">
                                        {# Chart column #}
                                        {% if facetCharts is defined and facetCharts[fieldName] is defined %}
                                            <div class="col-lg-5 mb-3">
                                                <div class="card h-100">
                                                    <div class="card-header py-2 bg-light">
                                                        <small class="fw-semibold">Distribution (top 10)</small>
                                                    </div>
                                                    <div class="card-body p-2">
                                                        <div style="position: relative; height: 300px; width: 100%;">
                                                            {{ render_chart(facetCharts[fieldName], {'style': 'display: block; width: 100%; height: 100%;'}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}

                                        {# Table column #}
                                        <div class="{{ facetCharts is defined and facetCharts[fieldName] is defined ? 'col-lg-7' : 'col-12' }}">
                                            <table class="table table-sm table-striped table-hover facet-datatable">
                                                <thead>
                                                <tr>
                                                    <th>Label</th>
                                                    <th data-type="number">Count</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for c in counts %}
                                                    <tr>
                                                        <td>{{ c.label is same as(null) or c.label == '' ? '∅ (null/empty)' : c.label }}</td>
                                                        <td>{{ c.count|number_format }}</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        {# ---------------- SETTINGS TAB ---------------- #}
        <div class="tab-pane fade" id="settings" role="tabpanel">
            <div class="card">
                <div class="card-header"><strong>Configured settings (MeiliService)</strong></div>
                <div class="card-body">
                    <pre class="mb-0"><code>{{ settings|json_pretty }}</code></pre>
                </div>
            </div>
        </div>

        {# ---------------- RAW INFO TAB ---------------- #}
        <div class="tab-pane fade" id="raw-info" role="tabpanel">
            <div class="card">
                <div class="card-header"><strong>Raw index info (Meilisearch /indexes/{{ indexName }})</strong></div>
                <div class="card-body">
                    <pre class="mb-0"><code>{{ rawInfo|json_pretty }}</code></pre>
                </div>
            </div>
        </div>

        {# ---------------- STATS TAB ---------------- #}
        <div class="tab-pane fade" id="stats" role="tabpanel">
            <div class="card">
                <div class="card-header"><strong>Stats (Meilisearch /indexes/{{ indexName }}/stats)</strong></div>
                <div class="card-body">
                    <pre class="mb-0"><code>{{ stats|json_pretty }}</code></pre>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            function initDataTable(table) {
                if (table.dataset.initialized) return;
                new simpleDatatables.DataTable(table, {
                    perPage: 25,
                    perPageSelect: [10, 25, 50, 100],
                    searchable: true,
                    sortable: true,
                    labels: {
                        placeholder: "Search values...",
                        perPage: "{select} per page",
                        noRows: "No values found",
                        info: "Showing {start} to {end} of {rows} values"
                    }
                });
                table.dataset.initialized = 'true';
            }

            // Init the first visible table
            const firstTable = document.querySelector('.tab-pane.active .facet-datatable');
            if (firstTable) initDataTable(firstTable);

            // Init tables when their tab becomes visible
            document.querySelectorAll('[data-bs-toggle="tab"]').forEach(function(tab) {
                tab.addEventListener('shown.bs.tab', function(e) {
                    const pane = document.querySelector(e.target.dataset.bsTarget);
                    const table = pane?.querySelector('.facet-datatable');
                    if (table) initDataTable(table);
                });
            });
        });
    </script>
{% endblock %}
